using System;

namespace Problem4102
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            int n = int.Parse(Console.ReadLine());
            for (int i = 0; i < n; i++)
            {
                string setir = Console.ReadLine();
                var massiv = setir.Split(' ');
                string ad = massiv[0].ToLower();
                string soyad = massiv[1].ToLower();
                Console.WriteLine(soyad + "." + ad + "@retratek.com");
            }
        }
    }
}
