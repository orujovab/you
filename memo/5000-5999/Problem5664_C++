#include <iostream>

using namespace std;

int main(){
	long long f[8];
	f[1] = 2;
	f[2] = 20;
	f[3] = 980;
	f[4] = 232848;
	f[5] = 267227532;
	f[6] = 1478619421136;
	f[7] = 39405996318420160;
	bool first = true;
	int n;
	while (scanf("%d", &n) == 1) {
		if (!first) puts("");
		first = false;
		printf("%lld\n", f[n]);
	}
}
