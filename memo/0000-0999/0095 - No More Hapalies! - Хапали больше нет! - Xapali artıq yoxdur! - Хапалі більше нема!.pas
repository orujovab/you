var t, i:integer; a, sa, b, sb:real;
begin
  readln (t);
  for i:=1 to t do
    begin
      readln (a, sa, b, sb);
      if (a=0) and (b=0) then writeln (a:0:2);
      if (a=0) and (b<>0) then writeln (sb:0:2);
      if (b=0) and (a<>0) then writeln (sa:0:2);
      if (a<>0) and (b<>0) then writeln ((a*sa+b*sb)/(a+b):0:2);
    end;
end.
